.{prefix}-menu
  user-select none
  overflow-x hidden
  & &-item-line
    height 50px
    line-height 50px
    position relative
    overflow hidden
    &:hover
      background: color-primary + 60%
    &.active
      background: color-primary
      color: #fff
    .intend
      color: transparent
      // display: none
      letter-spacing: 28px
    .{prefix}-icons, i
      font-size: 1.4em
      position: relative
      top: .1em
      margin: 0 6px
      &:last-child
        font-size: .5em
        position: absolute
        right:1em

        
    &.can-click
      cursor: pointer
