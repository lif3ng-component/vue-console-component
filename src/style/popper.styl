.tippy-box
  outline none
.{prefix}-dropdown-menu
  default-border()
  default-border-radius()
  padding: 5px 0
  user-select: none
  background: #fff
  & &-split
    border none
    border-bottom: 1px solid #dae3ec
    &:first-child,&:last-child
      border none
  & &-item
    color: color-font-primary
    padding 0 20px
    height 30px
    line-height 30px
    text-align center
    cursor pointer
    &:hover
      color: color-primary
      background: color-primary + 90%