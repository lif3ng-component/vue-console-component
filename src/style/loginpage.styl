.{prefix}-login-page
  color: #fff
  >div
    background transparent
  .{prefix}-form-container
    width 300px
    .{prefix}-login-page-form-slot
      background: #fff
      padding: 20px
      padding-top: 0
      border-radius: 4px
      .{prefix}-form-item
        margin-bottom: 25px
      > .{prefix}-container
        justify-content: space-between
        padding 0 0 10px
        margin-top -8px
        font-size 14px
        
        &:last-child
          margin 0
          padding 10px 0 0
        > a
          cursor pointer
          color color-primary
          text-decoration: none
    .{prefix}-login-page-logo
      text-align: center
      img
        max-width: 100%
      + .{prefix}-login-page-form-slot
        margin-top: 30px
    .{prefix}-login-page-logo-text
      margin: 20px 0
      text-align: center
      font-size: 30px
