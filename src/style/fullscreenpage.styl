.{prefix}-fullscreen-page
  position: fixed
  top 0
  bottom 0
  left 0
  right 0
  background: #333
  background-size: cover
  background-position: 50%
  display: flex
  flex-direction: row
  align-items center
  justify-content: center
  &-container
    margin-bottom 120px
    background white
    border-radius 4px

.fullscreen-container-enter
  opacity 0
  transform translateY(-50px)
.fullscreen-container-enter-active
  transition: 1s
