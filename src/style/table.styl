.{prefix}-table
  border-collapse: collapse
  overflow-x auto
  text-align center
  default-border()
  default-border-radius()
  + .{prefix}-pagination
    margin-top:20px
  table
    border-collapse: collapse
  td,th
    line-height: 40px;
    a
      color: color-primary
      cursor: pointer
  th
    background: header-background
    font-weight: normal
  tr:nth-child(2n+1)
    background: table-row-color
