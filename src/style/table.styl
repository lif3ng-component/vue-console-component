.{prefix}-table
  border-collapse: collapse
  overflow-x auto
  text-align center
  default-border()
  default-border-radius()
  + .{prefix}-pagination
    margin-top:20px
  table
    border-collapse: collapse
  td,th
    line-height: 40px;
    color: color-font-second
    a + a
      margin-left: 10px
    a
      color: color-primary
      cursor: pointer
      
      &[danger]
      &.danger
        color: color-error
      

  th
    background: header-background
    font-weight: normal
    color: color-font-primary
  tr:nth-child(2n+1)
    background: second-background

      
