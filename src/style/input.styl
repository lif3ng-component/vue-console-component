.{prefix}-input
  box-sizing border-box
  color #333
  display: flex
  position: relative
  & &-inner-icon
    &-after
    &-before
      position: absolute
      top: 50%
      transform: translateY(-50%)
    &-after
      right: 10px
    &-before
      left: 10px
  & &-inner-text
    &-after
      default-border()
      default-border-radius()
      color #666
      line-height 34px
      padding 0 10px
      background: input-background
      clean-border(left)

  button
    &:last-child
      clean-border(left)
  & &-inner   // input
    flex: 1
    line-height 38px
    background: input-background
    border: 1px solid #ddd
    default-border-radius()
    padding 0 15px
    &[type=number]
      padding-right 10px
    &.has-after-icon
      padding-right: 34px
    &.has-before-icon
      padding-left: 34px

    &:not(:last-child)
      clean-border(right)
    
    &:focus
      outline none
      // border none
      border-color color-primary
      shadow(color-primary)
